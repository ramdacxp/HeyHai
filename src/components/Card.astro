---
interface Props {
  class?: string;
  title?: string;
}
const { title: title = "s",  class: clazz, ...attrs } = Astro.props;
---

<div class:list={["rounded border border-gray-200 bg-slate-50 shadow-lg p-4", clazz]} {...attrs}>
  <h2 class="text-2xl font-light">{title}</h2>
  <div>Content</div>
</div>

